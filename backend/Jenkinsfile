pipeline {
    agent any

    environment {
        DB_CREDENTIALS = credentials('DB_CREDENTIALS')
        DB_NAME = credentials('DB_NAME')
    }

    stages {
        stage('Build') {
            steps {
                sh """
                    cd backend
                    docker build -t backend:$BUILD_TAG .
                """
            }
        }
        stage('Test') {
            steps {
                echo 'Testing backend..'
                sh """
                    cd backend
                    ./jenkins-scripts/test.sh
                """
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}