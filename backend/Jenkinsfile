pipeline {
    agent any

    parameters {
        string(name: 'Repo_account', defaultValue: 'srinu7150', description: 'docker_repository_for_deployment')
        booleanParam(name: 'deploy', defaultValue: false, description: 'Choose_to_deploy_into_repository')
    }

    environment {
        DB_CREDENTIALS = credentials('DB_CREDENTIALS')
        DB_NAME = credentials('DB_NAME')
        DOCKER_CREDENTIALS = credentials('DOCKER_CREDENTIALS')
    }

    stages {
        stage('Build') {
            steps {
                sh """
                    echo "building docker image for backend"
                    cd backend
                    docker build -t backend:$BUILD_NUMBER .
                """
            }
        }
        stage('Test') {
            steps {
                echo 'Testing backend..'
                sh """
                    cd backend
                    ./jenkins-scripts/testing/test.sh
                """
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
                println "${branch}"
            }
        }
    }
}