pipeline {
    agent any

    environment {
        DB_CREDENTIALS = credentials('DB_CREDENTIALS')
        DB_NAME = credentials('DB_NAME')
        DOCKER_CREDENTIALS = credentials('DOCKER_CREDENTIALS')
    }

    stages {
        stage('Build') {
            steps {
                sh """
                    cd backend
                    docker build -t backend:$BUILD_NUMBER .
                """
            }
        }
        stage('Test') {
            steps {
                echo 'Testing backend..'
                sh """
                    cd backend
                    ./jenkins-scripts/testing/test.sh
                """
            }
        }
        stage('Deploy') {
            when {
                branch 'main'
            }
            steps {
                echo 'Deploying....'
                println ${branch}
            }
        }
    }
}